<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasty Tales</title>
    <link rel="icon" type="image/x-icon" href="assets\favicon_io (1)\favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles/style.css">
    <link rel="stylesheet" href="/css/styles/cuisine.css">
    <style>
        .contain {
            /* background-color: #fbf3f3;  */
            font-family: Arial, sans-serif;
            line-height: 1.6;
            padding: 20px;
            font-family: Domine;
            font-weight: 500;
        }

        h1 {
            font-weight: bold;
        }

        .title {
            text-align: center;
        }

        .nutrition-facts {

            margin: auto;
            /* padding: 10px; */
            margin-top: 30px;
            padding: 10px 15px;
            width: fit-content;
            display: flex;
            flex-direction: column;
            align-items: center;
            /* justify-content: center; */
            text-align: center;
            border: 2px solid orange;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background: #fff;
        }

        hr {

            height: 2px;
            /* Set the height of the hr */
            background-color: #ccc;
            /* Set a background color for the hr */
            box-shadow: 0 400px 206px -50px rgba(0, 0, 0, 0.5);
            /* Add shadow */
            /* margin: 20px 0; */
        }

        .nutrition-facts h3 {
            color: orange
        }

        h3 {
            font-weight: 600;
        }

        .facts {
            margin-top: 10px;
            /* width: 100%; */
            display: flex;
            flex-direction: row;
            gap: 50px;
            justify-content: space-between;
            box-shadow: inset;
        }

        @media (max-width: 600px) {
            .facts {
                /* flex-direction: column; */
                gap: 25px;
                margin-top: 5px;
            }

            /* .nutrition-facts{

    } */
        }

        .ingr_list {
            line-height: 35px;
            font-size: 13pt;
        }

        .process {
            line-height: 35px;
            width: 100%;
        }

        small {
            font-size: 10pt;
        }

        .like {
            margin-left: 30px;
            display: flex;
            flex-direction: row;
            gap: 5px;
        }

        .like button {
            background: none;
            border: none;
            cursor: pointer;
            padding: 0;

        }

        #like-count {
            font-size: 15pt;
            /* margin-top: 5px; */
        }

        #like-button {
            background: none;
            border: none;
            cursor: pointer;
            padding: 0;
        }

        #like-button .bi-heart {
            fill: gray;
        }

        #like-button.liked .bi-heart {
            fill: red;

        }
    </style>
</head>

<body>
    <%- include("./partials/header.ejs") %>

        <div class="contain">
            <div class="title">
                <h1><%= itemName %></h1>
            </div>
            <div class="px-2 pt-3 text-center">
                <div class="container px-5">
                    <!-- data:[<mediatype>][;base64],<data> -->
                    <img src="data:image/png;base64,<%= imageData %>"
                        class="img-fluid rounded-3 shadow-lg mb-4 reduced-height" alt="Example image" loading="lazy">
                </div>
            </div>




            <div class="ingredients">
                <h3>Ingredients</h3>
                <ul class="ingr_list">
                    <% for( let i=0; i < ingredients.length; i++ ) { %>
                        <li>
                            <%= ingredients[i] %>
                        </li>
                        <% } %>
                </ul>
            </div>
            <div class="process">
                <h3>Directions</h3>
                <ol class="process">
                    <% for( let i=0; i < steps.length; i++ ) { %>
                        <li>
                            <%= steps[i] %>
                        </li>
                        <% } %>
                </ol>
            </div>
            <div class="nutrition-facts">
                <h3>Nutrition Facts <small>(per serving)</small></h3>
                <% if (locals.nutrition) { %>
                <div class="facts">
                     
                   
                    <div class="fact">
                        <div>Fat</div>
                        <div><b><%= nutrition[0] %></b></div>
                    </div>
                    <div class="fact">
                        <div>Carbs</div>
                        <div><b><%= nutrition[1] %></b></div>
                    </div>
                    <div class="fact">
                        <div>Protein</div>
                        <div><b><%= nutrition[2] %></b></div>
                    </div>
                    <div class="fact">
                        <div>Calories</div>
                        <div><b><%= nutrition[3] %></b></div>
                    </div>
                </div>
                <% } else { %>
                    <p>No details about Nutritional facts Found</p>
                    <% } %>
                 
            </div>
        </div>
        <!-- <div class="feedback"> -->
        <div class="like">
            <button id="like-button" onclick="increase()">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#ccc" class="bi bi-heart-fill"
                    viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314" />
                </svg>
            </button>
            <span id="like-count"><%= likes %></span>
        </div>

        <!-- </div> -->
        <hr />
        <%- include ("./partials/footer.ejs") %>

            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Domine:wght@400..700&display=swap" rel="stylesheet">
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link
                href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Playball&display=swap"
                rel="stylesheet">
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Playball&display=swap" rel="stylesheet">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
            <script>
                async function increase() {
                    const targetElement = event.target;
                    let like=0;
                    // Initialize svgElement
                    let svgElement;
                    if (targetElement.tagName.toLowerCase() === 'svg') {
                        svgElement = targetElement;
                    } else if (targetElement.closest('svg')) {
                        svgElement = targetElement.closest('svg');
                    }
                    const color=svgElement.getAttribute('fill');
                    if(color==="#ccc"){
                        svgElement.setAttribute('fill', "red");
                        like++;
                        const response = await fetch('/<%= cuisineName %>/<%= itemId %>/update-like', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        newLikeCount: like
                        
                    })
                });
                    }
                    else{
                        svgElement.setAttribute('fill', "#ccc");
                        like--;
                        const response = await fetch('/<%= cuisineName %>/<%= itemId %>/update-dislike', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        newLikeCount: like
                        
                    })
                });
                    }
                    // console.log(like);
                     // Send a POST request to update the like count
                // const response = await fetch('/<%= cuisineName %>/<%= itemId %>/update-like', {
                //     method: 'POST',
                //     headers: {
                //         'Content-Type': 'application/json'
                //     },
                //     body: JSON.stringify({
                //         newLikeCount: like
                        
                //     })
                // });
            }
            </script>


</body>

</html>